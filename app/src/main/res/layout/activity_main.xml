<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home_ui.MainActivity">

    <example.hs.baselibrary.widget.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"></example.hs.baselibrary.widget.NoScrollViewPager>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/btn_nav_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:itemTextColor="@drawable/txt_home_bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home_bottom_nav"
        android:background="#fff"></android.support.design.widget.BottomNavigationView>


</LinearLayout>