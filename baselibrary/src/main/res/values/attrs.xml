<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 自定义控件的名称 -->
    <declare-styleable name="TitleBar">

        <!-- 自定义的属性名称 和对应的单位 -->
        <attr name="backName" format="string|reference" />
        <attr name="backSize" format="dimension" />
        <attr name="backColor" format="color" />
        <attr name="backIcon" format="reference" />

        <attr name="titleText" format="string|reference" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleShow" format="boolean" />


        <attr name="icon1" format="reference" />

        <attr name="rightIcon" format="reference" />
        <attr name="rightName" format="string|reference" />
        <attr name="rightSize" format="dimension" />
        <attr name="rightColor" format="color" />

        <attr name="backgroud" format="color|reference" />

    </declare-styleable>
    <declare-styleable name="CircleImageViews">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="LinesEditView">
        <attr name="maxLength" format="integer" />
        <attr name="ignoreCnOrEn" format="boolean" />
        <attr name="hintText" format="string|reference" />
        <attr name="hintTextColor" format="color|reference" />
        <attr name="titles" format="string|reference" />
        <attr name="titlesTextColor" format="color|reference" />
        <attr name="contentText" format="string|reference" />
        <attr name="contentTextSize" format="dimension|reference" />
        <attr name="contentTextColor" format="color|reference" />
        <attr name="contentViewHeight" format="dimension|reference" />

    </declare-styleable>


    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer" />
    </declare-styleable>


    <declare-styleable name="CirclePercentView">
        <attr name="radius" format="dimension" />
        <attr name="stripeWidth" format="dimension" /><!--色带宽度-->
        <attr name="percent" format="integer" /><!--百分比 最大值为100-->
        <attr name="smallColor" format="color" /><!--色带宽度-->
        <!--外圈颜色-->
        <attr name="bigColor" format="color" />

        <!--色带宽度-->
    </declare-styleable>


    <declare-styleable name="CountDownProgress">

        <!-- 圆实心的颜色 -->
        <attr name="circSolidColor" format="color"></attr>

        <!-- 圆边框的颜色 -->
        <attr name="circFrameColor" format="color"></attr>

        <!-- 进度条的颜色 -->
        <attr name="progressColor" format="color"></attr>

        <!-- 文字的颜色 -->
        <attr name="textColor" format="color"></attr>

    </declare-styleable>

    <declare-styleable name="amountView">
        <!-- 加号可用状态按钮  -->
        <attr name="addEnableImage" format="integer"></attr>
        <!-- 加好不可用状态按钮  -->
        <attr name="addDisEnableImage" format="integer"></attr>
        <!-- 加号状态按钮组合  -->
        <attr name="addStatusImage" format="integer"></attr>

        <!-- 减号可用状态按钮  -->
        <attr name="reduceEnableImage" format="integer"></attr>
        <!-- 减好不可用状态按钮  -->
        <attr name="reduceDisEnableImage" format="integer"></attr>
        <!-- 减号状态按钮组合  -->
        <attr name="reduceStatusImage" format="integer"></attr>

        <attr name="amountTextSize" format="dimension|reference"></attr>
        <attr name="amountTextColor" format="color|reference"></attr>
        <attr name="amountBackground" format="color|reference"></attr>

        <!--默认值-->
        <attr name="defaultNumber" format="integer"></attr>
        <!--最大值-->
        <attr name="MaxNumber" format="integer"></attr>
    </declare-styleable>
</resources>